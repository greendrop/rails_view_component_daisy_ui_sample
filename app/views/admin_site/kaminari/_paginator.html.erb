<%# The container tag
  - available local variables
    current_page:  a page object for the currently displayed page
    total_pages:   total number of pages
    per_page:      number of items to fetch per page
    remote:        data-remote
    paginator:     the paginator that renders the pagination tags inside -%>

<%# NOTE: ViewComponentを利用するため、paginator.renderは利用しない %>
<%= render(AdminSite::PaginationComponent.new) do %>
  <%= paginator.first_page_tag %>
  <%= paginator.prev_page_tag %>
  <% paginator.each_page do |page| -%>
    <% if page.display_tag? -%>
      <%= paginator.page_tag(page) %>
    <% elsif !page.was_truncated? -%>
      <%= paginator.gap_tag %>
    <% end -%>
  <% end -%>
  <% unless current_page.out_of_range? %>
    <%= paginator.next_page_tag %>
    <%= paginator.last_page_tag %>
  <% end %>
<% end %>
