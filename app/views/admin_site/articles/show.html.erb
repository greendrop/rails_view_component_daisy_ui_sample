<%
  title = t('admin_site.general.model_show_title', model: Article.model_name.human)
%>

<% content_for :title, title %>

<% content_for(:main_header) do %>
  <%= render(AdminSite::MainHeaderComponent.new) do %>
    <%= render(AdminSite::MainHeaderTitleComponent.new) do %>
      <%= render(AdminSite::MainHeaderTitleTextComponent.new) do %>
        <%= title %>
      <% end %>
    <% end %>
    <%= render(AdminSite::MainHeaderActionComponent.new) do %>
      <%= render(AdminSite::LinkButtonComponent.new(url: admin_site_articles_path)) do %>
        <%= t('admin_site.general.list') %>
      <% end %>
      <%= render(AdminSite::LinkButtonComponent.new(url: edit_admin_site_article_path(id: @article.id))) do %>
        <%= t('admin_site.general.edit') %>
      <% end %>
      <%= render(AdminSite::ErrorLinkButtonComponent.new(url: admin_site_article_path(id: @article.id), data: { turbo_method: :delete, turbo_confirm: t('admin_site.general.model_destroy_are_you_sure', model: Article.model_name.human) })) do %>
        <%= t('admin_site.general.destroy') %>
      <% end %>
    <% end %>
  <% end %>
<% end %>

<%= render(AdminSite::DefinitionListComponent.new) do %>
  <%= render(AdminSite::DefinitionListItemComponent.new) do %>
    <%= render(AdminSite::DefinitionTermComponent.new) do %>
      <%= Article.human_attribute_name(:id) %>
    <% end %>
    <%= render(AdminSite::DefinitionDescriptionComponent.new) do %>
      <%= @article.id %>
    <% end %>
  <% end %>

  <%= render(AdminSite::DefinitionListItemComponent.new) do %>
    <%= render(AdminSite::DefinitionTermComponent.new) do %>
      <%= Article.human_attribute_name(:title) %>
    <% end %>
    <%= render(AdminSite::DefinitionDescriptionComponent.new) do %>
      <%= @article.title %>
    <% end %>
  <% end %>

  <%= render(AdminSite::DefinitionListItemComponent.new) do %>
    <%= render(AdminSite::DefinitionTermComponent.new) do %>
      <%= Article.human_attribute_name(:body) %>
    <% end %>
    <%= render(AdminSite::DefinitionDescriptionComponent.new) do %>
      <%= @article.body %>
    <% end %>
  <% end %>

  <%= render(AdminSite::DefinitionListItemComponent.new) do %>
    <%= render(AdminSite::DefinitionTermComponent.new) do %>
      <%= Article.human_attribute_name(:status) %>
    <% end %>
    <%= render(AdminSite::DefinitionDescriptionComponent.new) do %>
      <%= @article.status %>
    <% end %>
  <% end %>

  <%= render(AdminSite::DefinitionListItemComponent.new) do %>
    <%= render(AdminSite::DefinitionTermComponent.new) do %>
      <%= Article.human_attribute_name(:published_at) %>
    <% end %>
    <%= render(AdminSite::DefinitionDescriptionComponent.new) do %>
      <%= l(@article.published_at, format: :admin_site_default) if @article.published_at.present? %>
    <% end %>
  <% end %>

  <%= render(AdminSite::DefinitionListItemComponent.new) do %>
    <%= render(AdminSite::DefinitionTermComponent.new) do %>
      <%= Article.human_attribute_name(:created_at) %>
    <% end %>
    <%= render(AdminSite::DefinitionDescriptionComponent.new) do %>
      <%= l(@article.created_at, format: :admin_site_default) if @article.created_at.present? %>
    <% end %>
  <% end %>

  <%= render(AdminSite::DefinitionListItemComponent.new) do %>
    <%= render(AdminSite::DefinitionTermComponent.new) do %>
      <%= Article.human_attribute_name(:updated_at) %>
    <% end %>
    <%= render(AdminSite::DefinitionDescriptionComponent.new) do %>
      <%= l(@article.updated_at, format: :admin_site_default) if @article.updated_at.present? %>
    <% end %>
  <% end %>
<% end %>
