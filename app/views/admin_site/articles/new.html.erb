<%
  title = t('admin_site.general.model_new_title', model: Article.model_name.human)
%>

<% content_for :title, title %>

<% content_for(:main_header) do %>
  <%= render(AdminSite::MainHeaderComponent.new) do %>
    <%= render(AdminSite::MainHeaderTitleComponent.new) do %>
      <%= render(AdminSite::MainHeaderTitleTextComponent.new) do %>
        <%= title %>
      <% end %>
    <% end %>
    <%= render(AdminSite::MainHeaderActionComponent.new) do %>
      <%= render(AdminSite::LinkButtonComponent.new(url: admin_site_articles_path)) do %>
        <%= t('admin_site.general.list') %>
      <% end %>
    <% end %>
  <% end %>
<% end %>

<%= form_with(model: @article, url: admin_site_articles_path, builder: AdminSite::FormBuilder) do |form| %>
  <%= render 'form', form: %>

  <%= form.full_width_primary_submit t('admin_site.general.create') %>
<% end %>
