<%
  title = t('admin_site.general.model_list_title', model: ArticleCategory.model_name.human(count: 2))
%>

<% content_for :title, title %>

<% content_for(:main_header) do %>
  <%= render(AdminSite::MainHeaderComponent.new) do %>
    <%= render(AdminSite::MainHeaderTitleComponent.new) do %>
      <%= render(AdminSite::MainHeaderTitleTextComponent.new) do %>
        <%= title %>
      <% end %>
    <% end %>
    <%= render(AdminSite::MainHeaderActionComponent.new) do %>
      <%= render(AdminSite::LinkButtonComponent.new(url: new_admin_site_article_category_path)) do %>
        <%= t('admin_site.general.new') %>
      <% end %>
    <% end %>
  <% end %>
<% end %>

<div class="mb-4">
  <%= page_entries_info @article_categories %>
</div>

<% if @article_categories.present? %>
  <div class="mb-4">
    <%= render(AdminSite::TableComponent.new(append_classes: ['mb-4'])) do %>
      <%= render(AdminSite::TableRowComponent.new) do %>
        <%= render(AdminSite::TableCellComponent.new) do %>
          <%= Article.human_attribute_name(:id) %>
        <% end %>
        <%= render(AdminSite::TableCellComponent.new) do %>
          <%= Article.human_attribute_name(:name) %>
        <% end %>
        <%= render(AdminSite::TableCellComponent.new) do %>
          <%= Article.human_attribute_name(:created_at) %>
        <% end %>
        <%= render(AdminSite::TableCellComponent.new) do %>
          <%= Article.human_attribute_name(:updated_at) %>
        <% end %>
        <%= render(AdminSite::TableCellComponent.new) %>
      <% end %>
      <%= render(DaisyUi::TableBodyComponent.new) do %>
        <% @article_categories.each do |article_category| %>
          <%= render(AdminSite::TableRowComponent.new) do %>
            <%= render(AdminSite::TableCellComponent.new) do %>
              <%= article_category.id %>
            <% end %>
            <%= render(AdminSite::TableCellComponent.new) do %>
              <%= article_category.name %>
            <% end %>
            <%= render(AdminSite::TableCellComponent.new) do %>
              <%= l(article_category.created_at, format: :admin_site_default) if article_category.created_at.present? %>
            <% end %>
            <%= render(AdminSite::TableCellComponent.new) do %>
              <%= l(article_category.updated_at, format: :admin_site_default) if article_category.updated_at.present? %>
            <% end %>
            <%= render(AdminSite::TableCellComponent.new) do %>
              <%= render(AdminSite::LinkButtonComponent.new(url: admin_site_article_category_path(id: article_category.id))) do %>
                <%= t('admin_site.general.show') %>
              <% end %>
            <% end %>
          <% end %>
        <% end %>
      <% end %>
    <% end %>
  </div>

  <div class="mb-4 flex items-center justify-center">
    <%= paginate @article_categories, views_prefix: :admin_site %>
  </div>
<% end %>
