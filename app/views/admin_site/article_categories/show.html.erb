<%
  title = t('admin_site.general.model_show_title', model: ArticleCategory.model_name.human)
%>

<% content_for :title, title %>

<% content_for(:main_header) do %>
  <%= render(AdminSite::MainHeaderComponent.new) do %>
    <%= render(AdminSite::MainHeaderTitleComponent.new) do %>
      <%= render(AdminSite::MainHeaderTitleTextComponent.new) do %>
        <%= title %>
      <% end %>
    <% end %>
    <%= render(AdminSite::MainHeaderActionComponent.new) do %>
      <%= render(AdminSite::LinkButtonComponent.new(url: admin_site_article_categories_path)) do %>
        <%= t('admin_site.general.list') %>
      <% end %>
      <%= render(AdminSite::LinkButtonComponent.new(url: edit_admin_site_article_category_path(id: @article_category.id))) do %>
        <%= t('admin_site.general.edit') %>
      <% end %>
      <%= render(AdminSite::ErrorLinkButtonComponent.new(url: admin_site_article_category_path(id: @article_category.id), data: { turbo_method: :delete, turbo_confirm: t('admin_site.general.model_destroy_are_you_sure', model: ArticleCategory.model_name.human) })) do %>
        <%= t('admin_site.general.destroy') %>
      <% end %>
    <% end %>
  <% end %>
<% end %>

<%= render(AdminSite::DefinitionListComponent.new) do %>
  <%= render(AdminSite::DefinitionListItemComponent.new) do %>
    <%= render(AdminSite::DefinitionTermComponent.new) do %>
      <%= ArticleCategory.human_attribute_name(:id) %>
    <% end %>
    <%= render(AdminSite::DefinitionDescriptionComponent.new) do %>
      <%= @article_category.id %>
    <% end %>
  <% end %>

  <%= render(AdminSite::DefinitionListItemComponent.new) do %>
    <%= render(AdminSite::DefinitionTermComponent.new) do %>
      <%= ArticleCategory.human_attribute_name(:name) %>
    <% end %>
    <%= render(AdminSite::DefinitionDescriptionComponent.new) do %>
      <%= @article_category.name %>
    <% end %>
  <% end %>

  <%= render(AdminSite::DefinitionListItemComponent.new) do %>
    <%= render(AdminSite::DefinitionTermComponent.new) do %>
      <%= ArticleCategory.human_attribute_name(:created_at) %>
    <% end %>
    <%= render(AdminSite::DefinitionDescriptionComponent.new) do %>
      <%= l(@article_category.created_at, format: :admin_site_default) if @article_category.created_at.present? %>
    <% end %>
  <% end %>

  <%= render(AdminSite::DefinitionListItemComponent.new) do %>
    <%= render(AdminSite::DefinitionTermComponent.new) do %>
      <%= ArticleCategory.human_attribute_name(:updated_at) %>
    <% end %>
    <%= render(AdminSite::DefinitionDescriptionComponent.new) do %>
      <%= l(@article_category.updated_at, format: :admin_site_default) if @article_category.updated_at.present? %>
    <% end %>
  <% end %>
<% end %>
